/* pages/videos/videos.wxss */
#swiper_video{
  width: 100%;
  height: 100vh;
}
.msg_bottom{
  width: 100%;
  position: fixed;
  bottom: 75rpx;
  left: 0;

}
.showGoodsList {
  width: 176rpx;
  height: 70rpx;
  padding-top: 12rpx;
  position: relative;
}

.goodsNum {
  position: absolute;
  top: 0;
  left: 40rpx;
  width: 36rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 12rpx;
  /* z-index: 999; */
}

.goodsNum_ {
  height: 16rpx;
  font-size: 20rpx;
  font-family: San-Francisco-Text-Medium;
  font-weight: 500;
  color: rgba(255, 102, 153, 1);
  line-height: 16rpx;
  text-align: center;
}

.showGoods_Btn {
  flex: 1;
  height: 58rpx;
  background: rgba(254, 108, 197, 1);
  /* // linear-gradient(0deg, rgba(254, 108, 197, 1), rgba(255, 102, 153, 1)); */
  border-radius: 30rpx;
  display: flex;
  padding: 0 20rpx;
  align-items: center;
}

.goods_img {
  width: 30rpx;
  height: 30rpx;
}

.goods_txt {
  margin-left: 8rpx;
  height: 30rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(254, 254, 254, 1);
  line-height: 30rpx;
}
.msg_top{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  padding: 0 24rpx;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.msg_topNum{
padding: 0 16rpx;
height:38rpx;
background:rgba(47,58,64,0.8);
border-radius:20rpx;
font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(254,254,254,1);
line-height:38rpx;
}
.msg_topTitle{
    height: 32rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(255, 255, 255, 0.8);
  line-height: 32rpx;
}