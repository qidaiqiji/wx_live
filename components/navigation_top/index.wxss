.header {
  display: flex !important;
  align-items: center;
  top: 0;
  position: fixed;
  width: 100%;
  /* background-color: #FFF; */
  z-index: 99999;
}
.header .line {
  border-left: 1rpx solid #D7D7D7;
  height: 36rpx;
}
.header .back, .header .home {
  height: 32rpx;
  /* width: 40%; */
  /* height: 100%; */
  display: flex;
  align-items: center;
  justify-content: center;
}
.backImg{
  margin-left: 30rpx;
  width: 30rpx;
  height: 30rpx;
}
.header .title-bar {
  display: flex !important;
  align-items: center;
  width: 100%;
  /* justify-content: space-around; */
